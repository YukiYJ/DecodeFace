<MenuPage>:
    name: "Menu"

    FloatLayout:
        cols:1

        Label:
            text:"Decode Faces"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.33, "top":0.75}
            size_hint: 0.35, 0.15

        Button:
            pos_hint:{"x":0.4,"y":0.35}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Start"
            on_release:
                root.start_button()
        Button:
            pos_hint:{"x":0.4,"y":0.2}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Quit"
            on_release:
                root.quit_button()


<RulePage>:
    name:"Rule"

    FloatLayout:
        cols:1

        Label:
            text:"Rule"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.33, "top":0.95}
            size_hint: 0.35, 0.15
        Label:
            text:"1. You are going to solve a puzzle (a 3-digit code).\n2. You only have 3 chances.\n3. After each attempt, there are some hints for you."
            pos_hint: {"x":0.33, "top":0.84}
            font_size: 18
            size_hint: 0.35, 0.15

        Label:
            text:"Hint"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.33, "top":0.69}
            size_hint: 0.35, 0.15
        Image:
            id: gif
            source: 'results/8/GIF.gif'
            pos_hint: {"x":0.35, "top":0.55}
            size_hint: .3, .3
            allow_stretch: True
            anim_loop: 10

        Button:
            pos_hint:{"x":0.4,"y":0.1}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Go"
            on_release:
                root.button()

<SuccessPage>:
    name:"Success"

    FloatLayout:
        cols:1

        Label:
            text:"Congratulations!"
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint:{"y":0.15}
        Label:
            text:"You solve the puzzle."
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint:{"y":0.05}
        Button:
            text: "Quit"
            pos_hint:{"x":0.4,"y":0.2}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.quit_button()

<FailPage>:
    name:"Fail"

    FloatLayout:
        cols:1

        Label:
            text:"Sorry, you fail to solve the puzzle."
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint:{"y":0.2}
        Label:
            text: root.show_code()
            font_size: (root.width**2 + root.height**2) / 14**4
            pos_hint:{"y":0}

        Button:
            text: "Quit"
            pos_hint:{"x":0.4,"y":0.2}
            size_hint: 0.2, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.quit_button()

